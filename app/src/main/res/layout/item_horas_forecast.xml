<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="70dp"
    android:background="#FF9227">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 PM"
        android:id="@+id/tvHora"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivIconoHora"
        android:src="@drawable/clear_day"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvHora"
        android:layout_toEndOf="@+id/tvHora"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:id="@+id/tvResumenHora"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ivIconoHora"
        android:layout_toEndOf="@+id/ivIconoHora"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100.00"
        android:id="@+id/tvTemperaturaHora"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvResumenHora"
        android:layout_toEndOf="@+id/tvResumenHora" />
</RelativeLayout>